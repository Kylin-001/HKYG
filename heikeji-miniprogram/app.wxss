}

.rounded {
  border-radius: 50%;
}

/* 图片样式 */
.image {
  width: 100%;
  height: 100%;
}

.image-circle {
  border-radius: 50%;
}

.image-square {
  border-radius: 12rpx;
}

/* 标签样式 */
.badge {
  display: inline-block;
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  line-height: 1;
  color: white;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: 20rpx;
}

.badge-primary { background-color: #667eea; }
.badge-success { background-color: #4CAF50; }
.badge-warning { background-color: #ff9800; }
.badge-danger { background-color: #f44336; }
.badge-info { background-color: #17a2b8; }
.badge-light { background-color: #f8f9fa; color: #333; }

/* 价格样式 */
.price {
  color: #ff4757;
  font-weight: bold;
}

.price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 2rpx;
}

.original-price {
  color: #999;
  text-decoration: line-through;
  font-size: 24rpx;
}

/* 加载样式 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.empty-action {
  color: #667eea;
  font-size: 24rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  outline: none;
}

.form-textarea {
  min-height: 200rpx;
  resize: vertical;
}

/* 分割线样式 */
.divider {
  height: 1rpx;
  background-color: #e0e0e0;
  margin: 30rpx 0;
}

.divider-text {
  position: relative;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin: 40rpx 0;
}

.divider-text::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background-color: #e0e0e0;
}

.divider-text::after {
  content: attr(data-text);
  position: relative;
  display: inline-block;
  padding: 0 20rpx;
  background-color: white;
  color: #999;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(30rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 响应式隐藏 */
.hidden { display: none !important; }
.visible { visibility: visible !important; }
.invisible { visibility: hidden !important; }

/* 小程序特定样式 */
.weui-cells {
  margin-top: 0;
  background-color: white;
  line-height: 1.41176471;
  font-size: 17px;
  overflow: hidden;
  position: relative;
}

.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
}

.weui-cell__bd {
  flex: 1;
}

.weui-cell__ft {
  text-align: right;
  color: #999;
}

.weui-input {
  width: 100%;
  border: 0;
  outline: 0;
  background-color: transparent;
  font-size: 17px;
  color: #000;
}

/* 滚动区域 */
.scroll-view {
  height: 100%;
}

.scroll-y {
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.scroll-x {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  white-space: nowrap;
}

/* 状态指示器 */
.status-pending { color: #ff9800; }
.status-processing { color: #2196f3; }
.status-completed { color: #4caf50; }
.status-cancelled { color: #f44336; }

/* 特殊效果 */
.ripple {
  position: relative;
  overflow: hidden;
}

.ripple::before {
  content: "";
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, 0.5);
  transform: scale(0);
  transition: transform 0.5s, opacity 0.5s;
  opacity: 0;
}

.ripple:active::before {
  transform: scale(2);
  opacity: 1;
  transition: 0s;
}