/**app.wxss**/
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background-color: #f5f5f5;
}

/* 容器样式 */
.container {
  padding: 20rpx;
}

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-header {
  padding: 30rpx 30rpx 0;
}

.card-body {
  padding: 30rpx;
}

.card-footer {
  padding: 0 30rpx 30rpx;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-secondary {
  background: #f8f9fa;
  color: #495057;
  border: 1rpx solid #dee2e6;
}

.btn-success {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
}

.btn-warning {
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
  color: white;
}

.btn-danger {
  background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
  color: white;
}

.btn-small {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 30rpx 60rpx;
  font-size: 32rpx;
}

