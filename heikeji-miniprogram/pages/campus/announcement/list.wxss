/* 校园公告列表页面样式 */
.page-container {
  padding: 0 20rpx 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
}

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 30rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 公告列表样式 */
.announcement-list {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.announcement-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.announcement-item:last-child {
  border-bottom: none;
}

.announcement-content {
  margin-bottom: 20rpx;
}

.announcement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.announcement-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.announcement-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.announcement-source {
  font-size: 24rpx;
  color: #3cc51f;
  background-color: #f6ffed;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.announcement-time {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多样式 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #666;
  font-size: 28rpx;
}

.load-more-text {
  color: #3cc51f;
}

/* 无数据样式 */
.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
