<!-- 二手市场详情页面 -->
<view class="container">
  <!-- 页面头部 -->
  <view class="header">
    <view class="header-left" bindtap="onBack">
      <image src="/assets/icons/back.png" class="back-icon" mode="aspectFit"></image>
    </view>
    <text class="header-title">商品详情</text>
    <view class="header-right">
      <image src="/assets/icons/share.png" class="share-icon" mode="aspectFit" bindtap="onShare"></image>
      <image src="/assets/icons/collect.png" class="collect-icon" mode="aspectFit" bindtap="onCollect"></image>
    </view>
  </view>

  <!-- 商品图片轮播 -->
  <swiper class="goods-swiper" indicator-dots indicator-color="#fff" indicator-active-color="#FF6B6B" autoplay circular>
    <swiper-item wx:for="{{goodsDetail.images}}" wx:key="index">
      <image src="{{item}}" class="swiper-image" mode="aspectFit" bindtap="onImagePreview" data-index="{{index}}"></image>
    </swiper-item>
  </swiper>

  <!-- 商品信息 -->
  <view class="goods-info">
    <text class="goods-title">{{goodsDetail.title}}</text>
    <view class="price-section">
      <text class="current-price">¥{{goodsDetail.price}}</text>
      <text class="original-price" wx:if="{{goodsDetail.originalPrice}}">¥{{goodsDetail.originalPrice}}</text>
    </view>
    <view class="meta-info">
      <text class="location">{{goodsDetail.location}}</text>
      <text class="time">{{goodsDetail.createTime}}</text>
      <text class="views">浏览 {{goodsDetail.views}}次</text>
    </view>
  </view>

  <!-- 商品描述 -->
  <view class="goods-description">
    <view class="section-title">商品描述</view>
    <text class="description-content">{{goodsDetail.description}}</text>
  </view>

  <!-- 卖家信息 -->
  <view class="seller-info" bindtap="onSellerInfo">
    <view class="seller-avatar">
      <image src="{{goodsDetail.sellerAvatar || '/assets/icons/default-avatar.png'}}" mode="aspectFit"></image>
    </view>
    <view class="seller-meta">
      <text class="seller-name">{{goodsDetail.sellerName}}</text>
      <text class="seller-rating">评分: {{goodsDetail.sellerRating || '暂无'}}</text>
    </view>
    <image src="/assets/icons/arrow-right.png" class="arrow-icon" mode="aspectFit"></image>
  </view>

  <!-- 底部操作栏 -->
  <view class="bottom-bar">
    <view class="contact-btn" bindtap="onContact">
      <image src="/assets/icons/chat.png" class="contact-icon" mode="aspectFit"></image>
      <text class="contact-text">联系卖家</text>
    </view>
    <view class="buy-btn" bindtap="onBuyNow">立即购买</view>
  </view>
</view>
