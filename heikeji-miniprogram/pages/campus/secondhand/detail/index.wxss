/* 二手市场详情页面样式 */
.container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left, .header-right {
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon, .share-icon, .collect-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 商品图片轮播 */
.goods-swiper {
  height: 500rpx;
  background-color: #f0f0f0;
}

.swiper-image {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

/* 商品信息 */
.goods-info {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.goods-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 50rpx;
}

.price-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.current-price {
  font-size: 48rpx;
  font-weight: 600;
  color: #FF6B6B;
  margin-right: 20rpx;
}

.original-price {
  font-size: 32rpx;
  color: #999;
  text-decoration: line-through;
}

.meta-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
}

.location, .time, .views {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 商品描述 */
.goods-description {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 45rpx;
  white-space: pre-line;
}

/* 卖家信息 */
.seller-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 120rpx;
  transition: all 0.3s ease;
}

.seller-info:active {
  background-color: #f5f5f5;
}

.seller-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.seller-avatar image {
  width: 100%;
  height: 100%;
}

.seller-meta {
  flex: 1;
}

.seller-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.seller-rating {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.1);
  height: 100rpx;
  box-sizing: border-box;
}

.contact-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 60rpx;
}

.contact-icon {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 5rpx;
}

.contact-text {
  font-size: 24rpx;
  color: #333;
}

.buy-btn {
  background-color: #FF6B6B;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  width: 200rpx;
  text-align: center;
}
