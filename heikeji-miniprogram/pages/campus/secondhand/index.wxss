/* 二手市场首页样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left, .header-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon, .publish-icon {
  width: 40rpx;
  height: 40rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
}

.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 分类筛选 */
.filter-scroll {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
  white-space: nowrap;
}

.filter-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin: 0 10rpx;
  border-radius: 50rpx;
  background-color: #f0f0f0;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #FF6B6B;
  color: #fff;
}

.filter-text {
  font-size: 28rpx;
  color: #666;
}

.filter-item.active .filter-text {
  color: #fff;
  font-weight: 600;
}

/* 商品列表 */
.goods-scroll {
  flex: 1;
  overflow: hidden;
}

.goods-list {
  padding: 10rpx;
}

.goods-item {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.goods-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 45rpx;
}

.goods-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF6B6B;
  margin-bottom: 10rpx;
}

.goods-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.goods-location {
  max-width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-time {
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.publish-btn {
  background-color: #FF6B6B;
  color: #fff;
  border: none;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}
