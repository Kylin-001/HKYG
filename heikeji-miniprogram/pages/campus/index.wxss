/* 校园服务首页样式 */
.page-container {
  padding: 0 20rpx 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.search-bar {
  margin-bottom: 30rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #999;
}

.service-categories {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.category-item {
  width: 30%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 0;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 26rpx;
  color: #3cc51f;
}

.announcement-list {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.announcement-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.announcement-item:last-child {
  border-bottom: none;
}

.announcement-title {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.announcement-time {
  font-size: 24rpx;
  color: #999;
}

.classroom-list {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.classroom-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.classroom-item:last-child {
  border-bottom: none;
}

.classroom-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.classroom-location {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  margin-right: 20rpx;
}

.classroom-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.classroom-status.empty {
  background-color: #e6f7ff;
  color: #1890ff;
}

.classroom-status.occupied {
  background-color: #fff1f0;
  color: #ff4d4f;
}
