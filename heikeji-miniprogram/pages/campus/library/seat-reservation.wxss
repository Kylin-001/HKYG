/* 图书馆座位预约页面样式 */
.seat-reservation-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.nav-item.active {
  color: #3cc51f;
  font-weight: bold;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #3cc51f;
  border-radius: 2rpx;
}

/* 日期选择器 */
.date-picker {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.date-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.date-picker-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
  color: #333;
  padding: 10rpx 0;
}

.icon-arrow {
  display: inline-block;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #666;
  margin-left: 10rpx;
}

/* 时间段选择 */
.time-selector {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.time-scroll {
  white-space: nowrap;
}

.time-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.time-item.selected {
  background-color: #3cc51f;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(60, 197, 31, 0.4);
}

/* 座位分布图 */
.seat-map-container {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.seat-map {
  margin-top: 20rpx;
}

/* 楼层选择器 */
.floor-selector {
  display: flex;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.floor-item {
  padding: 15rpx 30rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.floor-item.active {
  background-color: #3cc51f;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(60, 197, 31, 0.4);
}

/* 座位网格 */
.seat-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.seat {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.seat.available {
  background-color: #e6f7ff;
  color: #1890ff;
}

.seat.available:hover {
  transform: scale(1.05);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
}

.seat.occupied {
  background-color: #fff2f0;
  color: #ff4d4f;
  cursor: not-allowed;
}

.seat.reserved {
  background-color: #f6ffed;
  color: #52c41a;
  cursor: not-allowed;
}

.seat.selected {
  background-color: #fff7e6;
  color: #faad14;
  transform: scale(1.1);
  box-shadow: 0 4rpx 16rpx rgba(250, 173, 20, 0.4);
}

.seat-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.seat-status {
  font-size: 20rpx;
}

/* 座位信息 */
.seat-info {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  width: 120rpx;
  color: #999;
}

.info-item .value {
  flex: 1;
  color: #333;
}

.info-item .value.available {
  color: #1890ff;
}

.info-item .value.occupied {
  color: #ff4d4f;
}

/* 底部预约按钮 */
.bottom-btn-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
}

.reserve-btn {
  width: 100%;
  height: 80rpx;
  background-color: #3cc51f;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(60, 197, 31, 0.4);
  transition: all 0.3s ease;
}

.reserve-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(60, 197, 31, 0.4);
}

.reserve-btn:disabled {
  background-color: #ccc;
  color: #fff;
  box-shadow: none;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .seat-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 15rpx;
  }
  
  .time-item {
    padding: 12rpx 25rpx;
    margin-right: 15rpx;
    font-size: 26rpx;
  }
}

@media (max-width: 320px) {
  .seat-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 15rpx;
  }
  
  .time-item {
    padding: 10rpx 20rpx;
    margin-right: 10rpx;
    font-size: 24rpx;
  }
}
