/* 外卖订单追踪页面样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left, .header-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 订单状态 */
.order-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.status-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.status-icon {
  width: 60rpx;
  height: 60rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 28rpx;
  color: #666;
}

/* 预计送达时间 */
.delivery-info {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
}

.delivery-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.delivery-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.delivery-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 订单基本信息 */
.order-info {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 配送地址 */
.address-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.address-content {
  display: flex;
  flex-direction: column;
}

.address-top {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}

/* 骑手信息 */
.rider-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.rider-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.rider-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.rider-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.rider-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 5rpx;
}

.rider-rating {
  font-size: 26rpx;
  color: #666;
}

.rider-contact {
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 配送进度 */
.progress-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.progress-bar {
  position: relative;
  padding: 20rpx 0;
}

.progress-line {
  position: absolute;
  top: 50%;
  left: 0;
  height: 6rpx;
  background-color: #4CAF50;
  transform: translateY(-50%);
  transition: width 0.3s ease;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  position: relative;
  z-index: 1;
}

.progress-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.progress-step.active .step-circle {
  background-color: #4CAF50;
  border-color: #4CAF50;
}

.progress-step.active .step-text {
  color: #4CAF50;
  font-weight: 600;
}

.progress-step.active .step-time {
  color: #333;
}

.step-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 4rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.step-icon {
  width: 40rpx;
  height: 40rpx;
}

.step-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 5rpx;
  text-align: center;
}

.step-time {
  font-size: 20rpx;
  color: #ccc;
  text-align: center;
}

/* 订单商品 */
.order-items {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.items-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item {
  display: flex;
  align-items: center;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 5rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-spec {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 30rpx;
  font-weight: 600;
  color: #FF6B6B;
}

.item-quantity {
  font-size: 26rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx 30rpx;
}

.bottom-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #FF6B6B;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 20rpx 40rpx;
  border: 2rpx solid #333;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  background-color: #fff;
}

.action-btn.primary {
  background-color: #FF6B6B;
  border-color: #FF6B6B;
  color: #fff;
}

.action-btn.cancel {
  background-color: #f5f5f5;
  border-color: #ccc;
  color: #666;
}

/* 停止事件冒泡 */
.stopPropagation {
  pointer-events: none;
}

.rider-contact {
  pointer-events: auto;
}
