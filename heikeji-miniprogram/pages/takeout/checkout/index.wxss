/* 订单结算页样式 */
.checkout-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 配送地址 */
.address-section {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.address-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.address-info {
  flex: 1;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.address-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-right: 20rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.no-address-text {
  font-size: 28rpx;
  color: #999;
}

.arrow-right-icon {
  width: 20rpx;
  height: 20rpx;
  opacity: 0.5;
}

/* 通用区块样式 */
.order-section, .delivery-section, .payment-section, .remark-section, .price-section {
  background-color: #fff;
  margin-bottom: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

/* 商品清单 */
.order-items {
  max-height: 300rpx;
  overflow-y: auto;
}

.order-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-item:last-child {
  border-bottom: none;
}

.order-item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.order-item-info {
  flex: 1;
}

.order-item-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.order-item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-item-price {
  font-size: 28rpx;
  color: #ff3b30;
  font-weight: bold;
}

.order-item-quantity {
  font-size: 26rpx;
  color: #666;
}

/* 配送方式 */
.delivery-options {
  display: flex;
  flex-direction: column;
}

.delivery-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.delivery-option:last-child {
  border-bottom: none;
}

.delivery-option.selected {
  background-color: rgba(60, 197, 31, 0.05);
}

.delivery-type {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.delivery-fee {
  font-size: 26rpx;
  color: #666;
}

.radio-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 支付方式 */
.payment-options {
  display: flex;
  flex-direction: column;
}

.payment-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.payment-option:last-child {
  border-bottom: none;
}

.payment-option.selected {
  background-color: rgba(60, 197, 31, 0.05);
}

.payment-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.payment-type {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 订单备注 */
.remark-input {
  width: 100%;
  height: 100rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #666;
  box-sizing: border-box;
  background-color: #f9f9f9;
}

/* 价格明细 */
.price-section {
  margin-top: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #333;
}

.price-value.discount {
  color: #ff3b30;
}

.price-item.total {
  padding-top: 15rpx;
  border-top: 2rpx solid #f0f0f0;
  margin-top: 15rpx;
}

.price-label.total-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.price-value.total-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff3b30;
}

/* 提交订单按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  z-index: 999;
}

.total-amount {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.total-price {
  font-size: 36rpx;
  color: #ff3b30;
  font-weight: bold;
}

.submit-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3cc51f;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.submit-btn:disabled {
  background-color: #ccc;
  color: #999;
}