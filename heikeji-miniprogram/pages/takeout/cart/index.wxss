/* 购物车页面样式 */
.cart-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 购物车为空状态 */
.empty-cart {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.empty-cart-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-cart-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.go-shopping-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3cc51f;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 购物车有商品状态 */
.cart-content {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.cart-scroll {
  flex: 1;
  padding: 10rpx;
  overflow-y: auto;
}

.cart-item {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.cart-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.cart-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}

.cart-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5rpx;
}

.cart-item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.cart-item-price {
  font-size: 30rpx;
  color: #ff3b30;
  font-weight: bold;
  margin-left: 20rpx;
}

.cart-item-desc {
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.cart-item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-item-count {
  display: flex;
  align-items: center;
}

.count-btn {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  font-size: 28rpx;
  font-weight: bold;
}

.count-btn.minus {
  color: #999;
  margin-right: 20rpx;
}

.count-btn.plus {
  color: #3cc51f;
  margin-left: 20rpx;
}

.count-btn:disabled {
  color: #eee;
  border-color: #eee;
}

.count-value {
  font-size: 28rpx;
  color: #333;
  width: 60rpx;
  text-align: center;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff3b30;
  padding: 5rpx 15rpx;
  border: 1rpx solid #ff3b30;
  border-radius: 15rpx;
}

/* 底部结算栏 */
.cart-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  z-index: 999;
}

.cart-total {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.total-price {
  font-size: 36rpx;
  color: #ff3b30;
  font-weight: bold;
}

.cart-actions {
  display: flex;
  align-items: center;
}

.clear-cart-btn {
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fff;
  color: #999;
  border: 1rpx solid #ddd;
  border-radius: 35rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.checkout-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3cc51f;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.checkout-btn:disabled {
  background-color: #ccc;
  color: #999;
}