/* 订单列表页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 30rpx;
  height: 30rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
}

/* 订单状态筛选 */
.filter-bar {
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  position: sticky;
  top: 100rpx;
  z-index: 90;
}

.filter-bar::-webkit-scrollbar {
  display: none;
}

.filter-item {
  display: inline-block;
  padding: 20rpx 30rpx;
  margin: 0 10rpx;
  border-bottom: 4rpx solid transparent;
}

.filter-item.active {
  border-bottom-color: #3cc51f;
}

.filter-item:first-child {
  margin-left: 20rpx;
}

.filter-item:last-child {
  margin-right: 20rpx;
}

.filter-text {
  font-size: 32rpx;
  color: #666;
}

.filter-item.active .filter-text {
  color: #3cc51f;
  font-weight: bold;
}

/* 订单列表 */
.order-list {
  flex: 1;
  height: calc(100vh - 180rpx);
}

/* 订单项 */
.order-item {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 订单头部 */
.order-header {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.order-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 32rpx;
  font-weight: bold;
}

.order-time {
  font-size: 26rpx;
  color: #999;
}

/* 订单商品 */
.order-goods {
  padding: 20rpx 30rpx;
}

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
}

.goods-item:last-child {
  margin-bottom: 0;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.goods-spec {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.goods-price-quantity {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.goods-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单底部 */
.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f5f5f5;
  background-color: #fafafa;
}

.order-total {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 30rpx;
  color: #666;
  margin-right: 10rpx;
}

.total-amount {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 订单操作按钮 */
.order-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  padding: 15rpx 30rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  margin-left: 15rpx;
  border: 2rpx solid #ddd;
  background-color: #fff;
  color: #666;
}

.action-btn.primary {
  background-color: #3cc51f;
  color: #fff;
  border-color: #3cc51f;
}

.action-btn.cancel {
  background-color: #fff;
  color: #ff6b6b;
  border-color: #ff6b6b;
}

.action-btn.detail {
  background-color: #fff;
  color: #666;
  border-color: #ddd;
}

/* 空订单提示 */
.empty-order {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  padding: 20rpx 60rpx;
  background-color: #3cc51f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 60rpx;
}

/* 加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 没有更多数据 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 订单状态颜色 */
.status-pending {
  color: #ff9800;
}

.status-confirmed {
  color: #2196f3;
}

.status-shipped {
  color: #9c27b0;
}

.status-completed {
  color: #4caf50;
}

.status-cancelled {
  color: #f44336;
}