/* pages/order/list.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 订单状态筛选 */
.order-tabs {
  background-color: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 96rpx;
  z-index: 90;
}

.order-tabs scroll-view {
  display: flex;
  padding: 0 20rpx;
  white-space: nowrap;
}

.tab-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 30rpx;
  margin-right: 10rpx;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.tab-item.active .tab-text {
  color: #3cc51f;
  font-weight: bold;
}

.tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #3cc51f;
  border-radius: 3rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-type {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.order-number {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: bold;
}

/* 订单时间和金额 */
.order-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 订单内容预览 */
.order-preview {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.preview-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.preview-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.preview-name {
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.preview-more {
  font-size: 22rpx;
  color: #999;
}

/* 订单操作 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
}

.action-btn {
  font-size: 24rpx;
  border-radius: 20rpx;
  padding: 8rpx 24rpx;
}

.action-btn.primary {
  background-color: #3cc51f;
  color: #fff;
  border: none;
}

.action-btn.default {
  background-color: #fff;
  color: #666;
  border: 1px solid #ddd;
}

.action-btn.danger {
  background-color: #fff;
  color: #f4333c;
  border: 1px solid #f4333c;
}

/* 空订单提示 */
.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping {
  background-color: #3cc51f;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
}

.go-shopping::after {
  border-radius: 24rpx;
}