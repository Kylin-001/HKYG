/* 评价页面样式 */

/* 页面容器 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header .back-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .back-btn icon {
  width: 44rpx;
  height: 44rpx;
  color: #333;
}

.header .title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header .header-right {
  width: 44rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 评价内容容器 */
.evaluate-content {
  padding: 20rpx;
}

/* 订单信息 */
.order-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.order-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.order-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
}

.item-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 评分部分 */
.rating-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.product-image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.rating-container {
  display: flex;
  align-items: center;
}

.rating-stars {
  display: flex;
  margin-right: 16rpx;
}

.star-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.rating-text {
  font-size: 26rpx;
  color: #666;
}

/* 评价内容部分 */
.content-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.content-input {
  width: 100%;
  min-height: 160rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 26rpx;
  color: #333;
  resize: none;
  box-sizing: border-box;
}

.content-input:focus {
  border-color: #1989fa;
  outline: none;
}

.placeholder {
  color: #c8c9cc;
}

.content-count {
  font-size: 22rpx;
  color: #999;
  text-align: right;
  margin-top: 8rpx;
  display: block;
}

/* 图片部分 */
.image-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.image-container {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-image-btn {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx dashed #e8e8e8;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* 提交按钮部分 */
.submit-section {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background-color: #1989fa;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 96rpx;
}

.submit-btn::after {
  border: none;
}
