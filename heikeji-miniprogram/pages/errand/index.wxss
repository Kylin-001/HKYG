/* 校园跑腿首页样式 */
.errand-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  padding: 10rpx 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  align-items: center;
}

.search-bar input {
  flex: 1;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.search-btn {
  margin-left: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  background-color: #3cc51f;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
  border: none;
}

/* 服务类型导航 */
.service-scroll {
  display: flex;
  padding: 20rpx 0;
  background-color: #fff;
  margin-bottom: 10rpx;
  white-space: nowrap;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 20rpx;
  padding: 10rpx 0;
}

.service-item.active {
  color: #3cc51f;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.service-item text {
  font-size: 24rpx;
}

/* 任务列表 */
.task-list {
  flex: 1;
  padding: 10rpx;
}

.task-section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 10rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.publish-btn {
  font-size: 26rpx;
  color: #3cc51f;
  padding: 5rpx 15rpx;
  border: 1rpx solid #3cc51f;
  border-radius: 15rpx;
}

.task-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.task-type-tag {
  font-size: 24rpx;
  color: #3cc51f;
  padding: 4rpx 12rpx;
  background-color: rgba(60, 197, 31, 0.1);
  border-radius: 12rpx;
}

.task-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.task-status.pending {
  color: #ff9500;
  background-color: rgba(255, 149, 0, 0.1);
}

.task-status.in-progress {
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.1);
}

.task-status.completed {
  color: #3cc51f;
  background-color: rgba(60, 197, 31, 0.1);
}

.task-content {
  margin-bottom: 15rpx;
}

.task-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.task-desc {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.task-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 15rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.task-location {
  display: flex;
  align-items: center;
  flex: 1;
}

.info-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.task-location text {
  font-size: 26rpx;
  color: #666;
}

.task-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff3b30;
}

.price-tip {
  font-size: 22rpx;
  color: #999;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-time {
  font-size: 24rpx;
  color: #999;
}

.task-claims {
  font-size: 24rpx;
  color: #3cc51f;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 浮动发布按钮 */
.float-publish-btn {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #3cc51f;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(60, 197, 31, 0.4);
  z-index: 100;
}

.float-publish-btn text {
  font-size: 60rpx;
  color: #fff;
  font-weight: bold;
}