/* 跑腿员接单页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 30rpx;
  height: 30rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
}

/* 筛选条件 */
.filter-section {
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.filter-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  margin-right: 20rpx;
}

.filter-item:last-child {
  margin-right: 0;
}

.filter-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.filter-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.filter-picker text {
  font-size: 32rpx;
  color: #333;
}

.filter-arrow {
  width: 20rpx;
  height: 20rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
}

.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.search-placeholder {
  color: #999;
}

.clear-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

/* 任务列表 */
.task-list {
  height: calc(100vh - 300rpx);
}

/* 任务项 */
.task-item {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

/* 任务类型标签 */
.task-type-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  z-index: 10;
}

/* 任务内容 */
.task-content {
  padding: 30rpx;
  position: relative;
  z-index: 5;
}

/* 任务标题和价格 */
.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.task-price {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-left: 20rpx;
}

/* 任务描述 */
.task-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 任务地点 */
.task-locations {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.location-item {
  display: flex;
  align-items: center;
  flex: 1;
  background-color: #f5f5f5;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
}

.location-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow-icon {
  width: 20rpx;
  height: 20rpx;
  margin: 0 20rpx;
}

/* 任务信息 */
.task-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-item {
  font-size: 26rpx;
  color: #999;
}

/* 操作按钮 */
.task-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx 30rpx;
}

.action-btn {
  padding: 20rpx 40rpx;
  border-radius: 60rpx;
  font-size: 32rpx;
  margin-left: 20rpx;
  border: 2rpx solid #ddd;
  background-color: #fff;
  color: #666;
}

.action-btn.primary {
  background-color: #3cc51f;
  color: #fff;
  border-color: #3cc51f;
}

/* 空列表提示 */
.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

/* 加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 没有更多数据 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 任务类型颜色 */
.delivery-color {
  background-color: #2196f3;
}

.purchase-color {
  background-color: #4caf50;
}

.help-color {
  background-color: #ff9800;
}

.other-color {
  background-color: #9c27b0;
}