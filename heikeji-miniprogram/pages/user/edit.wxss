/* pages/user/edit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left, .header-right {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 20rpx;
}

.header-right {
  color: #3cc51f;
  font-weight: bold;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 表单区域 */
.edit-form {
  padding: 20rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 头像编辑 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
}

.avatar-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.avatar-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  margin-bottom: 16rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

/* 基本信息 */
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  min-width: 140rpx;
}

.form-input {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  padding: 0 20rpx;
}

.form-input::placeholder {
  color: #999;
}

.form-picker {
  flex: 1;
  text-align: right;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  padding: 0 20rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.picker-text::after {
  content: '>';
  color: #ccc;
  margin-left: 20rpx;
  font-size: 28rpx;
}

/* 保存按钮 */
.save-btn {
  margin: 40rpx 20rpx 60rpx;
  background-color: #3cc51f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 36rpx;
  padding: 24rpx 0;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(60, 197, 31, 0.3);
}

.save-btn::after {
  border-radius: 36rpx;
  border: none;
}