/* pages/user/address-edit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left, .header-right {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 20rpx;
}

.header-right {
  color: #3cc51f;
  font-weight: bold;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 表单区域 */
.address-form {
  padding: 20rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  min-width: 140rpx;
  line-height: 60rpx;
}

.form-label.required::before {
  content: '*';
  color: #f4333c;
  margin-right: 8rpx;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 60rpx;
  padding: 0;
  text-align: right;
}

.form-input::placeholder {
  color: #999;
}

/* 所在地区选择 */
.area-item {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.area-choose {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.area-text {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  line-height: 60rpx;
}

.area-placeholder {
  font-size: 28rpx;
  color: #999;
  text-align: right;
  flex: 1;
  line-height: 60rpx;
}

.area-arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 详细地址文本域 */
.form-textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 44rpx;
  padding: 16rpx 0;
  min-height: 120rpx;
  text-align: right;
}

.form-textarea::placeholder {
  color: #999;
}

/* 设为默认地址 */
.checkbox-item {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.checkbox-wrapper {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.checkbox.checked {
  background-color: #3cc51f;
  border-color: #3cc51f;
}

.checkbox-icon {
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

/* 提交按钮 */
.submit-btn {
  margin: 40rpx 20rpx 60rpx;
  background-color: #3cc51f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 36rpx;
  padding: 24rpx 0;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(60, 197, 31, 0.3);
}

.submit-btn::after {
  border-radius: 36rpx;
  border: none;
}