/* 积分记录页面样式 */

/* 页面容器 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header .back-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .back-btn icon {
  width: 44rpx;
  height: 44rpx;
  color: #333;
}

.header .title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header .header-right {
  width: 44rpx;
}

/* 积分余额区域 */
.balance-section {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  padding: 48rpx 32rpx;
  color: #fff;
  text-align: center;
}

.balance-info {
  margin-bottom: 16rpx;
}

.balance-title {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 12rpx;
}

.balance-value {
  font-size: 72rpx;
  font-weight: 700;
  display: block;
}

.balance-desc {
  margin-top: 16rpx;
}

.desc-text {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 筛选条件容器 */
.filter-container {
  display: flex;
  background-color: #fff;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 88rpx;
  z-index: 99;
}

/* 筛选条件项 */
.filter-item {
  flex: 1;
  text-align: center;
  padding: 8rpx 0;
  font-size: 28rpx;
  color: #666;
  border-bottom: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-item.active {
  color: #1989fa;
  border-bottom-color: #1989fa;
}

/* 积分记录列表容器 */
.records-list {
  padding: 16rpx;
}

/* 积分记录项 */
.record-item {
  background-color: #fff;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.record-item:active {
  transform: scale(0.98);
}

/* 收入记录样式 */
.record-item.income {
  border-left: 8rpx solid #3cc51f;
}

/* 支出记录样式 */
.record-item.outcome {
  border-left: 8rpx solid #ff4d4f;
}

/* 记录左侧信息 */
.record-left {
  flex: 1;
  margin-right: 20rpx;
}

/* 记录标题 */
.record-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

/* 记录描述 */
.record-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

/* 记录时间 */
.record-time {
  font-size: 22rpx;
  color: #999;
  display: block;
}

/* 记录右侧金额 */
.record-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 记录金额 */
.record-amount {
  font-size: 32rpx;
  font-weight: 600;
}

/* 收入金额样式 */
.record-amount.income {
  color: #3cc51f;
}

/* 支出金额样式 */
.record-amount.outcome {
  color: #ff4d4f;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  color: #999;
}

.empty-state icon {
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}
