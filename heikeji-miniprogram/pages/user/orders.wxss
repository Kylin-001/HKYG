/* pages/user/orders.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 订单状态筛选 */
.order-tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #3cc51f;
  font-weight: bold;
}

.tab-line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #3cc51f;
  border-radius: 3rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.order-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.order-type {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 26rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

/* 订单内容 */
.order-content {
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.order-desc {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-desc:last-child {
  margin-bottom: 0;
}

.item-name {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.item-price {
  font-size: 26rpx;
  color: #333;
}

/* 订单底部 */
.order-footer {
  padding-top: 20rpx;
}

.order-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.total-label {
  font-size: 24rpx;
  color: #999;
}

.total-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
}

.action-btn {
  font-size: 24rpx;
  border-radius: 20rpx;
  padding: 8rpx 24rpx;
}

.action-btn.primary {
  background-color: #3cc51f;
  color: #fff;
  border: none;
}

.action-btn.default {
  background-color: #fff;
  color: #666;
  border: 1px solid #ddd;
}

.action-btn.danger {
  background-color: #fff;
  color: #f4333c;
  border: 1px solid #f4333c;
}

/* 空订单提示 */
.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping {
  background-color: #3cc51f;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
}

.go-shopping::after {
  border-radius: 24rpx;
}