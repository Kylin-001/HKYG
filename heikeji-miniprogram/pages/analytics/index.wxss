/* 数据分析页面样式 */
.page-container {
  padding: 0 20rpx 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.header-right {
  width: 60rpx;
  height: 60rpx;
}

/* 统计概览样式 */
.stats-overview {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stat-card {
  width: 23%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #3cc51f;
  margin-bottom: 10rpx;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 章节样式 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 图表容器 */
.chart-container {
  height: 200rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.chart-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 统计详情 */
.stat-details {
  display: flex;
  justify-content: space-between;
}

.detail-item {
  width: 30%;
  text-align: center;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.detail-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 偏好标签 */
.preference-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  background-color: #e6f7ff;
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
}

.tag-text {
  font-size: 26rpx;
  color: #1890ff;
}

/* 推荐商品 */
.recommended-products {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-item {
  width: 48%;
  background-color: #fafafa;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.product-image {
  width: 100%;
  height: 200rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff4d4f;
}
