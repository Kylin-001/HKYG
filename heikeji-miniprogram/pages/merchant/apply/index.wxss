/* 商家入驻申请页面样式 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  font-size: 14px;
  color: #333;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-right {
  width: 44rpx;
}

/* 申请表单 */
.apply-form {
  padding: 20rpx;
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* 标签 */
.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.label.required::after {
  content: '*';
  color: #f56c6c;
  margin-left: 4rpx;
}

/* 输入框 */
.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #1989fa;
  outline: none;
}

/* 文本域 */
.textarea {
  width: 100%;
  min-height: 160rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
  resize: vertical;
}

.textarea:focus {
  border-color: #1989fa;
  outline: none;
}

/* 字数统计 */
.count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 选择器 */
.picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.picker-content {
  flex: 1;
  display: flex;
  align-items: center;
}

.region-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 图片上传 */
.upload-item {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.upload-container {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  background-color: #fafafa;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

/* 预览和删除按钮 */
.preview-btn, .delete-btn {
  height: 60rpx;
  padding: 0 20rpx;
  margin-right: 16rpx;
  margin-bottom: 20rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.preview-btn {
  background-color: #ecf5ff;
  color: #409eff;
}

.delete-btn {
  background-color: #fef0f0;
  color: #f56c6c;
}

/* 错误信息 */
.error {
  display: block;
  font-size: 24rpx;
  color: #f56c6c;
  margin-top: 8rpx;
}

/* 占位符 */
.placeholder {
  color: #999;
}

/* 提交按钮 */
.submit-section {
  padding: 40rpx 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #1989fa;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  border: none;
  outline: none;
}

.submit-btn:active {
  background-color: #187dd7;
}

.submit-btn[disabled] {
  background-color: #c6e2ff;
  color: #fff;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .apply-form {
    padding: 10rpx;
  }
  
  .form-section {
    padding: 16rpx;
  }
  
  .upload-container {
    width: 160rpx;
    height: 160rpx;
  }
}
