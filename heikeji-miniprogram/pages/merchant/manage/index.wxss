/* 商家管理页面样式 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  font-size: 14px;
  color: #333;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
}

.setting-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

/* 商家信息 */
.merchant-info {
  background-color: #fff;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.merchant-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  object-fit: cover;
}

.merchant-details {
  flex: 1;
}

.merchant-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.merchant-type {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.merchant-status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #fff;
  background-color: #f56c6c;
}

.merchant-status.approved {
  background-color: #67c23a;
}

.arrow-icon {
  color: #999;
}

/* 统计数据 */
.statistics {
  background-color: #fff;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.menu-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.05);
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.menu-text {
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

/* 最近订单 */
.order-section {
  background-color: #fff;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
}

.more-text {
  font-size: 26rpx;
  color: #409eff;
  margin-right: 8rpx;
}

.more-icon {
  color: #409eff;
}

/* 订单列表 */
.order-list {
  margin-bottom: 20rpx;
}

.order-item {
  background-color: #fafafa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.order-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #f56c6c;
  background-color: #fef0f0;
}

.order-status.processing {
  color: #e6a23c;
  background-color: #fdf6ec;
}

.order-status.completed {
  color: #67c23a;
  background-color: #f0f9eb;
}

.order-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.order-info {
  font-size: 26rpx;
  color: #333;
}

.order-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #e6a23c;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  font-size: 24rpx;
  border-radius: 20rpx;
  padding: 0 24rpx;
  background-color: #f5f7fa;
  color: #606266;
  border: none;
}

.action-btn.primary {
  background-color: #409eff;
  color: #fff;
}

/* 空订单 */
.empty-order {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 26rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .statistics {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .menu-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .merchant-info {
    padding: 16rpx 20rpx;
  }
  
  .order-section {
    padding: 16rpx 20rpx;
  }
}
