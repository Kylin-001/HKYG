/* pages/forum/index.wxss */

/* 基础样式 */
.forum-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  flex: 1;
  transition: all 0.3s ease;
}

.search-input-wrap.active {
  flex: 1;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
}

.close-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.search-btn {
  padding: 10rpx;
}

.search-btn-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 分类导航样式 */
.category-scroll {
  display: flex;
  background-color: #fff;
  padding: 10rpx 0;
  white-space: nowrap;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 5;
}

.category-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  background-color: #3cc51f;
  color: #fff;
}

/* 标签切换样式 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #3cc51f;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #3cc51f;
  border-radius: 2rpx;
}

/* 内容区域样式 */
.content-scroll {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

/* 热门帖子样式 */
.hot-posts {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-text {
  font-size: 26rpx;
  color: #999;
}

.hot-posts-list {
  display: flex;
  flex-direction: column;
}

.hot-post-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.hot-post-item:last-child {
  border-bottom: none;
}

.hot-post-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.hot-post-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.hot-post-meta .author {
  margin-right: 20rpx;
}

.hot-post-meta .stats {
  display: flex;
  align-items: center;
}

.hot-post-meta .stat-icon {
  width: 22rpx;
  height: 22rpx;
  margin-right: 6rpx;
  vertical-align: middle;
}

.hot-post-meta .stat-text {
  margin-right: 16rpx;
}

/* 帖子列表样式 */
.post-list {
  display: flex;
  flex-direction: column;
}

.post-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.post-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #f0f0f0;
}

.author-info {
  flex: 1;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  margin-bottom: 16rpx;
}

.post-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-excerpt {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-footer {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 16rpx;
}

.post-stats {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.stat-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

/* 加载状态样式 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

/* 发布按钮样式 */
.publish-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #3cc51f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(60, 197, 31, 0.3);
  transition: all 0.3s ease;
  z-index: 100;
}

.publish-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 6rpx rgba(60, 197, 31, 0.2);
}

.publish-icon {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}
