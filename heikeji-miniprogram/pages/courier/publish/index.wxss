/* 快递代取发布页面样式 */
.publish-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left, .publish-btn {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 20rpx;
}

.publish-btn {
  color: #3cc51f;
  font-weight: bold;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 表单样式 */
.publish-form {
  padding: 20rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 表单标题 */
.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.required {
  color: #f4333c;
}

/* 输入框样式 */
.form-section input,
.form-section textarea {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-section textarea {
  min-height: 120rpx;
  line-height: 40rpx;
}

.form-section input::placeholder,
.form-section textarea::placeholder {
  color: #999;
}

/* 快递公司选择器 */
.express-company-selector,
.locker-selector {
  display: flex;
  align-items: center;
  position: relative;
}

.express-company-selector input,
.locker-selector input {
  padding-right: 60rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
  pointer-events: none;
}

/* 地址选择器 */
.address-input {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
}

.address-input input {
  flex: 1;
  background-color: transparent;
  padding: 0;
}

.input-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

/* 价格输入 */
.price-input-container {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.price-unit {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.price-input {
  flex: 1;
  background-color: transparent;
  padding: 0;
  text-align: left;
}

/* 价格建议 */
.price-suggestions {
  display: flex;
  gap: 20rpx;
}

.suggestion-item {
  font-size: 24rpx;
  color: #3cc51f;
  background-color: #f0f9eb;
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  cursor: pointer;
}

/* 紧急程度选项 */
.urgency-options {
  display: flex;
  gap: 20rpx;
}

.urgency-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.urgency-item.selected {
  background-color: #3cc51f;
  color: #fff;
}

.urgency-item text {
  display: block;
}

.urgency-item .urgency-desc {
  font-size: 20rpx;
  margin-top: 8rpx;
  opacity: 0.8;
}

/* 字符计数 */
.char-count {
  font-size: 22rpx;
  color: #999;
  text-align: right;
  margin-top: 12rpx;
  display: block;
}

/* 提交按钮 */
.submit-section {
  padding: 20rpx 0;
  margin-top: 20rpx;
}

.submit-btn {
  width: 100%;
  background-color: #3cc51f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 36rpx;
  padding: 24rpx 0;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(60, 197, 31, 0.3);
}

.submit-btn::after {
  border-radius: 36rpx;
  border: none;
}

/* 选择器样式 */
picker {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 1000;
}
