/* 快递代取详情页面样式 */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 20rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 任务状态卡片 */
.status-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.status-text.pending {
  color: #ff9500;
}

.status-text.claimed {
  color: #34aadc;
}

.status-text.completed {
  color: #3cc51f;
}

.status-text.cancelled {
  color: #999;
}

.status-desc {
  font-size: 24rpx;
  color: #666;
}

.status-icon {
  width: 120rpx;
  height: 120rpx;
}

/* 详情区域 */
.detail-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  font-weight: bold;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
}

/* 特殊样式 */
.code {
  font-weight: bold;
  color: #3cc51f;
}

.price {
  font-weight: bold;
  color: #f4333c;
  font-size: 28rpx;
}

/* 备注信息 */
.remark-content {
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
  padding: 20rpx 0;
}

/* 时间线 */
.timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline-item {
  position: relative;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-line {
  position: absolute;
  left: 20rpx;
  top: 32rpx;
  bottom: -30rpx;
  width: 2rpx;
  background-color: #e5e5e5;
}

.timeline-dot {
  position: absolute;
  left: 11rpx;
  top: 8rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: #e5e5e5;
  border-radius: 50%;
}

.timeline-dot.current {
  background-color: #3cc51f;
  width: 30rpx;
  height: 30rpx;
  left: 6rpx;
  top: 3rpx;
  box-shadow: 0 0 0 8rpx rgba(60, 197, 31, 0.1);
}

.timeline-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.timeline-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.timeline-time {
  font-size: 22rpx;
  color: #999;
}

.timeline-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 36rpx;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  bottom: 0;
  z-index: 100;
}

.action-btn {
  flex: 1;
  font-size: 28rpx;
  border-radius: 12rpx;
  padding: 20rpx 0;
  border: none;
}

.action-btn.primary-btn {
  background-color: #3cc51f;
  color: #fff;
}

.action-btn.cancel-btn {
  background-color: #fff;
  color: #f4333c;
  border: 1px solid #f4333c;
}

.action-btn.default-btn {
  background-color: #fff;
  color: #666;
  border: 1px solid #ddd;
}

.action-btn::after {
  border-radius: 12rpx;
  border: none;
}
