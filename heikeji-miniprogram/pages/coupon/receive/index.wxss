/* 优惠券领取页面样式 */

/* 页面容器 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header .back-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .back-btn icon {
  width: 44rpx;
  height: 44rpx;
  color: #333;
}

.header .title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header .header-right {
  width: 44rpx;
}

/* 页面标题和描述 */
.page-header {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  padding: 48rpx 24rpx;
  color: #fff;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 优惠券列表容器 */
.coupon-list {
  padding: 20rpx;
}

/* 优惠券项 */
.coupon-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  display: flex;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
}

.coupon-item:active {
  transform: scale(0.98);
}

/* 优惠券左侧金额区域 */
.coupon-left {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  padding: 32rpx 20rpx;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  position: relative;
  flex-shrink: 0;
}

/* 金额容器 */
.amount-container {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

/* 货币符号 */
.currency-symbol {
  font-size: 28rpx;
  font-weight: 400;
  margin-right: 4rpx;
}

/* 金额数字 */
.amount {
  font-size: 64rpx;
  font-weight: 700;
  line-height: 1;
}

/* 金额描述 */
.amount-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 优惠券右侧信息区域 */
.coupon-right {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 优惠券名称 */
.coupon-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

/* 优惠券描述 */
.coupon-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 36rpx;
  display: block;
}

/* 优惠券使用条件 */
.coupon-conditions {
  margin-bottom: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 条件文本 */
.condition {
  font-size: 22rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 优惠券有效期 */
.coupon-expire {
  display: flex;
  align-items: center;
}

/* 有效期标签 */
.expire-label {
  font-size: 22rpx;
  color: #999;
  margin-right: 8rpx;
}

/* 有效期日期 */
.expire-date {
  font-size: 22rpx;
  color: #999;
}

/* 优惠券领取按钮区域 */
.coupon-action {
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* 领取按钮 */
.receive-btn {
  padding: 16rpx 32rpx;
  background-color: #1989fa;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 1.5;
  min-width: 120rpx;
  text-align: center;
}

/* 已领取按钮样式 */
.receive-btn.received {
  background-color: #f5f5f5;
  color: #999;
}

/* 领取中按钮样式 */
.receive-btn.receiving {
  background-color: #f5f5f5;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  color: #999;
}

.empty-state icon {
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 24rpx;
  color: #999;
}

/* 空状态操作按钮 */
.empty-action {
  padding: 12rpx 32rpx;
  background-color: #1989fa;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #fff;
}

.action-text {
  color: #fff;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}
