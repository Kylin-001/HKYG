/* 优惠券列表页面样式 */

/* 页面容器 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header .back-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .back-btn icon {
  width: 44rpx;
  height: 44rpx;
  color: #333;
}

.header .title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header .header-right {
  width: auto;
}

.header .receive-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  padding: 0 24rpx;
  background-color: #1989fa;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.header .btn-text {
  color: #fff;
}

/* 筛选条件容器 */
.filter-container {
  display: flex;
  background-color: #fff;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 88rpx;
  z-index: 99;
}

/* 筛选条件项 */
.filter-item {
  flex: 1;
  text-align: center;
  padding: 8rpx 0;
  font-size: 28rpx;
  color: #666;
  border-bottom: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-item.active {
  color: #1989fa;
  border-bottom-color: #1989fa;
}

/* 优惠券列表容器 */
.coupon-list {
  padding: 16rpx;
}

/* 优惠券项 */
.coupon-item {
  background-color: #fff;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  display: flex;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
}

.coupon-item:active {
  transform: scale(0.98);
}

/* 已使用优惠券样式 */
.coupon-item.used {
  opacity: 0.7;
}

/* 已过期优惠券样式 */
.coupon-item.expired {
  opacity: 0.7;
}

/* 优惠券左侧金额区域 */
.coupon-left {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  padding: 32rpx 20rpx;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  position: relative;
  flex-shrink: 0;
}

/* 已使用优惠券左侧区域 */
.coupon-item.used .coupon-left {
  background: linear-gradient(135deg, #95a5a6, #7f8c8d);
}

/* 已过期优惠券左侧区域 */
.coupon-item.expired .coupon-left {
  background: linear-gradient(135deg, #95a5a6, #7f8c8d);
}

/* 金额容器 */
.amount-container {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

/* 货币符号 */
.currency-symbol {
  font-size: 28rpx;
  font-weight: 400;
  margin-right: 4rpx;
}

/* 金额数字 */
.amount {
  font-size: 64rpx;
  font-weight: 700;
  line-height: 1;
}

/* 金额描述 */
.amount-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 优惠券右侧信息区域 */
.coupon-right {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 优惠券名称 */
.coupon-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

/* 优惠券描述 */
.coupon-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 36rpx;
  display: block;
}

/* 优惠券使用条件 */
.coupon-conditions {
  margin-bottom: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 条件文本 */
.condition {
  font-size: 22rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 优惠券有效期 */
.coupon-expire {
  display: flex;
  align-items: center;
}

/* 有效期标签 */
.expire-label {
  font-size: 22rpx;
  color: #999;
  margin-right: 8rpx;
}

/* 有效期日期 */
.expire-date {
  font-size: 22rpx;
  color: #999;
}

/* 优惠券状态标签 */
.status-tag {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-tag.used {
  background-color: #e17055;
  color: #fff;
}

.status-tag.expired {
  background-color: #636e72;
  color: #fff;
}

/* 优惠券角标 */
.coupon-corner {
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  background-color: #f5f5f5;
  transform: rotate(45deg) translate(50%, -50%);
  z-index: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  color: #999;
}

.empty-state icon {
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 24rpx;
  color: #999;
}

/* 空状态操作按钮 */
.empty-action {
  padding: 12rpx 32rpx;
  background-color: #1989fa;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #fff;
}

.action-text {
  color: #fff;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}
