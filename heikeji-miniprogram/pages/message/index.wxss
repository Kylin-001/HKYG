/* 消息列表页面样式 */

/* 页面容器 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header .back-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .back-btn icon {
  width: 44rpx;
  height: 44rpx;
  color: #333;
}

.header .title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header .action-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.header .action-btn icon {
  width: 44rpx;
  height: 44rpx;
  color: #333;
}

/* 分类标签容器 */
.category-container {
  background-color: #fff;
  padding: 16rpx 0;
  overflow-x: auto;
  white-space: nowrap;
  position: sticky;
  top: 88rpx;
  z-index: 99;
  border-bottom: 1rpx solid #e8e8e8;
}

/* 隐藏滚动条 */
.category-container::-webkit-scrollbar {
  display: none;
}

/* 分类标签 */
.category-item {
  display: inline-block;
  padding: 0 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #666;
  margin: 0 8rpx;
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

/* 选中的分类标签 */
.category-item.active {
  background-color: #1989fa;
  color: #fff;
}

/* 消息列表容器 */
.message-list {
  padding: 16rpx 0;
}

/* 消息项 */
.message-item {
  background-color: #fff;
  margin: 0 16rpx 16rpx;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  position: relative;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.message-item:active {
  background-color: #f8f8f8;
}

/* 消息图标 */
.message-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.message-icon icon {
  width: 36rpx;
  height: 36rpx;
  color: #fff;
}

/* 不同类型消息的图标背景色 */
.message-icon.system {
  background-color: #ff9800;
}

.message-icon.order {
  background-color: #4caf50;
}

.message-icon.service {
  background-color: #2196f3;
}

.message-icon.activity {
  background-color: #9c27b0;
}

/* 消息内容容器 */
.message-content {
  flex: 1;
  min-width: 0;
}

/* 消息标题 */
.message-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* 消息正文 */
.message-text {
  font-size: 26rpx;
  color: #666;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

/* 消息时间 */
.message-time {
  font-size: 22rpx;
  color: #999;
}

/* 未读消息标记 */
.unread-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
}

/* 删除按钮 */
.delete-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-state icon {
  width: 120rpx;
  height: 120rpx;
  color: #c8c9cc;
  margin-bottom: 32rpx;
}

.empty-state .empty-text {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.empty-state .empty-subtext {
  font-size: 24rpx;
  color: #bbb;
}

/* 加载更多样式 */
.loading-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 清空确认弹窗 */
.clear-confirm {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
  padding: 32rpx;
  z-index: 1000;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.confirm-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.confirm-content {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 32rpx;
}

.confirm-buttons {
  display: flex;
  justify-content: space-between;
}

.confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 12rpx;
  margin: 0 8rpx;
  transition: all 0.2s ease;
}

.confirm-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn.confirm {
  background-color: #ff4d4f;
  color: #fff;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 操作按钮组 */
.action-buttons {
  position: fixed;
  bottom: 32rpx;
  right: 32rpx;
  z-index: 90;
}

.action-btn-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #1989fa;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(25, 137, 250, 0.4);
  transition: all 0.3s ease;
}

.action-btn-item:active {
  transform: scale(0.95);
}

.action-btn-item icon {
  width: 44rpx;
  height: 44rpx;
  color: #fff;
}
