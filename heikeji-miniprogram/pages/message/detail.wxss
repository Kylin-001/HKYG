/* 消息详情页面样式 */

/* 页面容器 */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header .back-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header .back-btn icon {
  width: 44rpx;
  height: 44rpx;
  color: #333;
}

.header .title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header .header-right {
  width: 44rpx;
}

/* 消息详情容器 */
.message-detail {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 消息头部 */
.message-header {
  margin-bottom: 24rpx;
}

.message-header .message-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
  line-height: 50rpx;
}

.message-header .message-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 消息正文 */
.message-content {
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.content-text {
  font-size: 30rpx;
  color: #666;
  line-height: 48rpx;
  text-align: justify;
}

/* 消息底部 */
.message-footer {
  display: flex;
  justify-content: flex-end;
}

/* 类型标签 */
.type-tag {
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.type-tag.system {
  background-color: #fff3cd;
  color: #856404;
}

.type-tag.order {
  background-color: #d4edda;
  color: #155724;
}

.type-tag.service {
  background-color: #d1ecf1;
  color: #0c5460;
}

.type-tag.activity {
  background-color: #f8d7da;
  color: #721c24;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-container .loading-text {
  font-size: 28rpx;
  color: #999;
}
