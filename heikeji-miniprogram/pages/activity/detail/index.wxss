/* pages/activity/detail/index.wxss */

/* 基础样式 */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx; /* 为评论输入框留出空间 */
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  font-size: 28rpx;
  color: #999;
}

/* 活动详情 */
.activity-detail {
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 活动封面 */
.activity-cover {
  width: 100%;
  height: 400rpx;
  background-color: #f0f0f0;
}

/* 活动标题 */
.activity-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: block;
}

.status-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-tag.upcoming {
  background-color: #fff7e6;
  color: #ff9800;
}

.status-tag.ongoing {
  background-color: #e8f5e8;
  color: #4caf50;
}

.status-tag.ended {
  background-color: #f5f5f5;
  color: #999;
}

/* 活动基本信息 */
.activity-info {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  opacity: 0.7;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
  display: block;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

/* 互动按钮 */
.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  background-color: #f0f0f0;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  opacity: 0.6;
  transition: all 0.3s ease;
}

.action-icon.active {
  opacity: 1;
  filter: brightness(0) saturate(100%) invert(40%) sepia(93%) saturate(1352%) hue-rotate(87deg) brightness(119%) contrast(119%);
}

.action-text {
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
}

.action-text.active {
  color: #3cc51f;
}

/* 主要操作按钮 */
.main-actions {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  min-width: 200rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.join-btn {
  background-color: #3cc51f;
  color: #fff;
}

.join-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.cancel-btn:active {
  background-color: #e0e0e0;
}

.ended-btn {
  background-color: #f5f5f5;
  color: #999;
  border: 1rpx solid #e0e0e0;
}

.sign-btn {
  background-color: #ff9800;
  color: #fff;
}

.sign-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.favorite-btn {
  background-color: #fff;
  color: #3cc51f;
  border: 2rpx solid #3cc51f;
}

.favorite-btn:active {
  background-color: #f0f8ff;
}

/* 活动描述 */
.activity-description {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 评论区域 */
.comments-section {
  padding: 20rpx;
  background-color: #fff;
}

/* 评论列表 */
.comments-list {
  display: flex;
  flex-direction: column;
}

.comment-item {
  display: flex;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.comment-author {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12rpx;
  word-break: break-word;
}

.comment-rating {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.rating-label {
  color: #999;
  margin-right: 8rpx;
}

.stars {
  display: flex;
}

.star {
  color: #e0e0e0;
  margin-right: 4rpx;
  transition: all 0.3s ease;
}

.star.active {
  color: #ffd700;
}

/* 加载更多评论 */
.loading-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

.empty-comments {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* 评论输入框 */
.comment-input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.comment-input {
  flex: 1;
  height: 64rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.submit-btn {
  background-color: #3cc51f;
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.submit-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}
