# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs
# https://editorconfig.org

root = true

[*]
# 字符集
charset = utf-8
# 缩进风格
indent_style = space
# 缩进空格数
indent_size = 2
# 结尾换行符
end_of_line = lf
# 保存时删除行尾空格
trim_trailing_whitespace = true
# 保存时在文件末尾添加换行
insert_final_newline = true
# 最大行宽
max_line_length = 100

[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2

[*.{css,scss,less}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[Makefile]
indent_style = tab

[*.{json,json5}]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
