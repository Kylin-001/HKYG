<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heikeji.mall.user.mapper.UserAuthMapper">

    <select id="selectByOpenId" resultType="com.heikeji.mall.user.entity.UserAuth">
        select * from user_auth where open_id = #{openId}
    </select>

    <select id="selectByUserId" resultType="com.heikeji.mall.user.entity.UserAuth">
        select * from user_auth where user_id = #{userId}
    </select>

</mapper>