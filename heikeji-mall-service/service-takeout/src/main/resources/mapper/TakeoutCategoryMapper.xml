<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heikeji.mall.takeout.mapper.TakeoutCategoryMapper">

    <select id="selectByMerchantId" resultType="com.heikeji.mall.takeout.entity.TakeoutCategory">
        SELECT * FROM takeout_category 
        WHERE merchant_id = #{merchantId} 
        AND status = 1 
        ORDER BY sort ASC
    </select>

</mapper>