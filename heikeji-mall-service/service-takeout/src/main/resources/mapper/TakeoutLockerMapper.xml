<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heikeji.mall.takeout.mapper.TakeoutLockerMapper">

    <select id="selectAvailableLockers" resultType="com.heikeji.mall.takeout.entity.TakeoutLocker">
        SELECT * FROM takeout_locker 
        WHERE status = 1 
        AND available_slots > 0 
        ORDER BY available_slots DESC
    </select>

    <select id="selectByLockerCode" resultType="com.heikeji.mall.takeout.entity.TakeoutLocker">
        SELECT * FROM takeout_locker 
        WHERE locker_code = #{lockerCode}
    </select>

</mapper>