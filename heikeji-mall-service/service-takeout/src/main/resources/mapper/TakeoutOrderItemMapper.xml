<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heikeji.mall.takeout.mapper.TakeoutOrderItemMapper">

    <select id="selectByOrderId" resultType="com.heikeji.mall.takeout.entity.TakeoutOrderItem">
        SELECT * FROM takeout_order_item 
        WHERE order_id = #{orderId}
    </select>

    <select id="selectByProductId" resultType="com.heikeji.mall.takeout.entity.TakeoutOrderItem">
        SELECT * FROM takeout_order_item 
        WHERE product_id = #{productId} 
        ORDER BY create_time DESC
    </select>

</mapper>