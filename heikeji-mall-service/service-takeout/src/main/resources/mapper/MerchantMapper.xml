<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heikeji.mall.takeout.mapper.MerchantMapper">

    <select id="selectOperatingMerchants" resultType="com.heikeji.mall.takeout.entity.Merchant">
        SELECT * FROM merchant 
        WHERE status = 1 
        AND is_open = 1 
        ORDER BY sort ASC, sales DESC
    </select>

    <select id="searchMerchants" resultType="com.heikeji.mall.takeout.entity.Merchant">
        SELECT * FROM merchant 
        WHERE status = 1 
        AND name LIKE CONCAT('%', #{keyword}, '%') 
        ORDER BY sales DESC
    </select>

</mapper>