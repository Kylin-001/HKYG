<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heikeji.mall.product.mapper.CategoryMapper">

    <!-- 通用查询结果映射 -->
    <resultMap id="CategoryResultMap" type="com.heikeji.mall.product.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="sort_order" property="sortOrder"/>
    </resultMap>
    
    <!-- 分类树结果映射 -->
    <resultMap id="CategoryTreeResultMap" type="com.heikeji.mall.product.entity.Category" extends="CategoryResultMap">
        <collection property="children" ofType="com.heikeji.mall.product.entity.Category" select="selectByParentId" column="id"/>
    </resultMap>

    <!-- 查询所有启用状态的分类 -->
    <select id="selectEnabledCategories" resultMap="CategoryResultMap">
        SELECT id, name, parent_id, sort_order
        FROM category
        ORDER BY sort_order ASC
    </select>
    
    <!-- 根据状态查询分类 -->
    <select id="selectByStatus" resultMap="CategoryResultMap">
        SELECT id, name, parent_id, sort_order
        FROM category
        ORDER BY sort_order ASC
    </select>
    
    <!-- 按排序字段查询所有分类 -->
    <select id="selectOrderBySort" resultMap="CategoryResultMap">
        SELECT id, name, parent_id, sort_order
        FROM category
        ORDER BY sort_order ASC
    </select>
    
    <!-- 根据父分类ID查询子分类 -->
    <select id="selectByParentId" resultMap="CategoryResultMap">
        SELECT id, name, parent_id, sort_order
        FROM category
        WHERE parent_id = #{parentId}
        ORDER BY sort_order ASC
    </select>
    
    <!-- 获取所有分类（包含父子关系） -->
    <select id="selectAllCategoriesWithRelation" resultMap="CategoryTreeResultMap">
        SELECT id, name, parent_id, sort_order
        FROM category
        WHERE parent_id = 0
        ORDER BY sort_order ASC
    </select>
    
    <!-- 获取启用的分类树 -->
    <select id="selectEnabledCategoryTree" resultMap="CategoryTreeResultMap">
        SELECT id, name, parent_id, sort_order
        FROM category
        WHERE parent_id = 0
        ORDER BY sort_order ASC
    </select>
</mapper>