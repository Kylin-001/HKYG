# 黑科易购项目生产环境配置
# 注意：此文件包含敏感信息，请妥善保管

# ========== 数据库配置 ==========
# MySQL数据库连接信息
DB_HOST=localhost
DB_PORT=3306
DB_NAME=heikeji_mall
DB_USERNAME=root
DB_PASSWORD=Mysql@8Root!2025

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=Redis@8Root!2025
REDIS_DATABASE=0

# ========== 服务配置 ==========
# 服务端口
SERVER_PORT=8080

# 服务地址
SERVER_HOST=0.0.0.0

# ========== 安全配置 ==========
# JWT密钥 - 生产环境必须使用强密钥
JWT_SECRET=JWT@8Secret!2025HeiKeJiMall
JWT_EXPIRATION=3600000

# 安全盐值 - 生产环境必须使用强盐值
SECURITY_SALT=Salt@8Value!2025HeiKeJiMall

# ========== 第三方服务配置 ==========
# 短信服务配置
SMS_ACCESS_KEY=请在部署时设置
SMS_SECRET_KEY=请在部署时设置
SMS_SIGN=黑科易购

# 文件存储配置
OSS_ACCESS_KEY=请在部署时设置
OSS_SECRET_KEY=请在部署时设置
OSS_ENDPOINT=http://oss.heikeji.com
OSS_BUCKET_NAME=heikeji-mall-prod

# ========== 日志配置 ==========
# 日志级别：DEBUG, INFO, WARN, ERROR
LOG_LEVEL=WARN

# 日志文件路径
LOG_PATH=/var/log/heikeji-mall/prod

# ========== 缓存配置 ==========
# 缓存过期时间(秒)
CACHE_TTL=3600

# ========== 限流配置 ==========
# 限流阈值(每秒请求数)
RATE_LIMIT_PER_SECOND=100

# ========== 消息队列配置 ==========
# RabbitMQ配置
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# ========== 分布式配置 ==========
# Nacos配置中心
NACOS_SERVER_ADDR=localhost:8848
NACOS_NAMESPACE=prod
NACOS_GROUP=PROD_GROUP

# ========== 监控配置 ==========
# Prometheus配置
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ========== 链路追踪配置 ==========
# Zipkin配置
ZIPKIN_ENABLED=true
ZIPKIN_SERVER_ADDR=http://zipkin.heikeji.com:9411