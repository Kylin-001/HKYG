# 黑科易购项目测试环境配置

# ========== 数据库配置 ==========
# MySQL数据库连接信息
DB_HOST=test-db.heikeji.com
DB_PORT=3306
DB_NAME=heikeji_mall_test
DB_USERNAME=test_user
DB_PASSWORD=test_password_2024

# Redis配置
REDIS_HOST=test-redis.heikeji.com
REDIS_PORT=6379
REDIS_PASSWORD=test_redis_password
REDIS_DATABASE=1

# ========== 服务配置 ==========
# 服务端口
SERVER_PORT=8080

# 服务地址
SERVER_HOST=0.0.0.0

# ========== 安全配置 ==========
# JWT密钥
JWT_SECRET=test_jwt_secret_key_for_heikeji_mall_2024
JWT_EXPIRATION=7200000

# 安全盐值
SECURITY_SALT=test_security_salt_for_heikeji_mall_2024

# ========== 第三方服务配置 ==========
# 短信服务配置 - 测试环境使用沙箱账号
SMS_ACCESS_KEY=sandbox_sms_access_key
SMS_SECRET_KEY=sandbox_sms_secret_key
SMS_SIGN=黑科易购测试

# 文件存储配置
OSS_ACCESS_KEY=test_oss_access_key
OSS_SECRET_KEY=test_oss_secret_key
OSS_ENDPOINT=http://oss-test.heikeji.com
OSS_BUCKET_NAME=heikeji-mall-test

# ========== 日志配置 ==========
# 日志级别：DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# 日志文件路径
LOG_PATH=/var/log/heikeji-mall/test

# ========== 缓存配置 ==========
# 缓存过期时间(秒)
CACHE_TTL=1800

# ========== 限流配置 ==========
# 限流阈值(每秒请求数)
RATE_LIMIT_PER_SECOND=150

# ========== 消息队列配置 ==========
# RabbitMQ配置
RABBITMQ_HOST=test-rabbitmq.heikeji.com
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=test_user
RABBITMQ_PASSWORD=test_password

# ========== 分布式配置 ==========
# Nacos配置中心
NACOS_SERVER_ADDR=test-nacos.heikeji.com:8848
NACOS_NAMESPACE=test
NACOS_GROUP=TEST_GROUP

# ========== 监控配置 ==========
# Prometheus配置
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ========== 链路追踪配置 ==========
# Zipkin配置
ZIPKIN_ENABLED=true
ZIPKIN_SERVER_ADDR=http://test-zipkin.heikeji.com:9411